<%- include('header') %>

<% if (institutions.length === 0) { %>
<div class="alert alert-info" role="alert">
    <p>There are no institutions to show, click <a href="/getAllStates">here</a> to pick a state!</p>
</div>
<% } else { %>
<br>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Country</th>
                <th scope="col">Institution Name</th>
                <th scope="col">Type</th>
            </tr>
        </thead>
        <tbody>
            <% institutions.forEach(function(institution, index) { %>
            <tr>
                <td><%= institution.VU_IDENTIFIKATOR %></td>
                <td><%= institution.DR_IDENTIFIKATOR %></td>
                <td><%= institution.VU_NAZIV %></td>
                <td><%= institution.TIP_UST %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
<% } %>

<%- include('footer') %>