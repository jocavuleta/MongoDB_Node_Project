<%- include('header') %>

<form method="post" action="/editEmployeeById/<%= employee.VU_IDENTIFIKATOR %>">
    <div class="form-group">
        <label for="exampleInputEmail1">Institution ID</label>
        <input type="text" class="form-control" id="institutionId" name="institutionId"
            value="<%= institution.VU_IDENTIFIKATOR %>">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Institution name</label>
        <input type="text" class="form-control" id="institutionName" name="institutionName"
            value="<%= institution.VU_NAZIV %>">
    </div>
    <div class="form-group">
        <label for="institutionType">Institution type</label>
        <select class="custom-select" id="institutionType" name="institutionType" required>
            <option selected disabled value="">Select institution type...</option>
            <% types.forEach(function(type, index) { %>
            <option value="<%= type.TIP_UST %>"><%= type.TIP_UST %></option>
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include('footer') %>