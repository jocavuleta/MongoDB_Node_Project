<%- include('header') %>
<form method="post" action="/addCourse/<%= course.VU_IDENTIFIKATOR %>">


    <div class="form-group">
        <label for="courseCode">Course Code</label>
        <input type="text" class="form-control" id="courseCode" name="courseCode">
    </div>
    <div class="form-group">
        <label for="coursVersion">Course Version</label>
        <input type="text" class="form-control" id="coursVersion" name="coursVersion">
    </div>
    <div class="form-group">
        <label for="coursName">Course Name</label>
        <input type="text" class="form-control" id="coursName" name="coursName">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Employee id</label>
        <input type="text" class="form-control" id="info_VU_ID" name="info_id" value="<%= course.VU_IDENTIFIKATOR %>">
    </div>
    <div class="form-group">
        <label for="intitution_type">Institution type</label>
        <select class="custom-select" id="intitution_type" name="intitution_type" required>
            <option selected disabled value="">Select Institution...</option>
            <% types.forEach(function(type, index) { %>
            <option value="<%= type.TIP_UST %>"><%= type.TIP_NAZIV %></option>
            <% }); %>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include('footer') %>